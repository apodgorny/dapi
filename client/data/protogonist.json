{
    "schema": {
        "$defs": {
            "Authority": {
                "description": "Represents a person who served as an authority figure providing formative influence.",
                "properties": {
                    "name": {
                        "default": "",
                        "description": "Name of the authority figure",
                        "title": "Name",
                        "type": "string"
                    },
                    "sex": {
                        "default": "",
                        "description": "Sex of the authority figure",
                        "title": "Sex",
                        "type": "string"
                    },
                    "relation": {
                        "default": "",
                        "description": "Relation of the authority to the person",
                        "title": "Relation",
                        "type": "string"
                    },
                    "age_diff": {
                        "default": 0,
                        "description": "Age difference between authority and person",
                        "title": "Age Diff",
                        "type": "integer"
                    },
                    "since_age": {
                        "default": 0,
                        "description": "Since what age this authority was perceived as such",
                        "title": "Since Age",
                        "type": "integer"
                    },
                    "resource": {
                        "$ref": "#/$defs/Resource",
                        "description": "Resources this authority provides"
                    }
                },
                "title": "Authority",
                "type": "object"
            },
            "Duality": {
                "description": "Represents a core psychological polarity anchored in a trauma.",
                "properties": {
                    "name": {
                        "default": "",
                        "description": "The core polarity name, like yin_side vs. yang_side",
                        "title": "Name",
                        "type": "string"
                    },
                    "yin": {
                        "$ref": "#/$defs/Side",
                        "description": "Yin side (usually submissive or adaptive)"
                    },
                    "yang": {
                        "$ref": "#/$defs/Side",
                        "description": "Yang side (usually rebellious or expansive)"
                    }
                },
                "title": "Duality",
                "type": "object"
            },
            "Persona": {
                "properties": {
                    "name": {
                        "default": "",
                        "description": "The person's name",
                        "title": "Name",
                        "type": "string"
                    },
                    "sex": {
                        "default": "",
                        "description": "The person's biological sex",
                        "title": "Sex",
                        "type": "string"
                    },
                    "age": {
                        "default": 0,
                        "description": "The person's age in years",
                        "title": "Age",
                        "type": "integer"
                    },
                    "occupation": {
                        "default": "",
                        "description": "The person's type of work or hobby",
                        "title": "Occupation",
                        "type": "string"
                    },
                    "pain": {
                        "default": "",
                        "description": "What causes emotional suffering in this person.",
                        "title": "Pain",
                        "type": "string"
                    },
                    "desire": {
                        "default": "",
                        "description": "What this person deeply wants or longs for.",
                        "title": "Desire",
                        "type": "string"
                    },
                    "portrait": {
                        "default": "",
                        "description": "Summary of this person's personality, values, and inner world.",
                        "title": "Portrait",
                        "type": "string"
                    },
                    "look": {
                        "default": "",
                        "description": "A visual description of this person's appearance.",
                        "title": "Look",
                        "type": "string"
                    }
                },
                "title": "Persona",
                "type": "object"
            },
            "Personality": {
                "description": "Represents the whole psyche as a network of subpersonalities.",
                "properties": {
                    "subpersonalities": {
                        "description": "All inner subpersonalities",
                        "items": {
                            "$ref": "#/$defs/Subpersonality"
                        },
                        "title": "Subpersonalities",
                        "type": "array"
                    }
                },
                "title": "Personality",
                "type": "object"
            },
            "PodgornySquare": {
                "description": "Describes key psychological ratios of behavior and emotional tendency.",
                "properties": {
                    "offended_guilty_ratio": {
                        "default": 0.5,
                        "description": "How much side feels offended vs guilty",
                        "title": "Offended Guilty Ratio",
                        "type": "number"
                    },
                    "active_passive_ratio": {
                        "default": 0.5,
                        "description": "How active vs passive the strategy is",
                        "title": "Active Passive Ratio",
                        "type": "number"
                    }
                },
                "title": "PodgornySquare",
                "type": "object"
            },
            "Resource": {
                "description": "Describes pleasant pro-survival vibe or input provided by another.",
                "properties": {
                    "emotional": {
                        "default": "",
                        "description": "Emotional support or validation this authority provides",
                        "title": "Emotional",
                        "type": "string"
                    },
                    "physical": {
                        "default": "",
                        "description": "Physical help or care this authority provides",
                        "title": "Physical",
                        "type": "string"
                    },
                    "mental": {
                        "default": "",
                        "description": "Ideas, knowledge, or advice provided",
                        "title": "Mental",
                        "type": "string"
                    },
                    "spiritual": {
                        "default": "",
                        "description": "Belief systems or values transmitted",
                        "title": "Spiritual",
                        "type": "string"
                    }
                },
                "title": "Resource",
                "type": "object"
            },
            "Side": {
                "description": "Represents one pole (side) of a duality.",
                "properties": {
                    "name": {
                        "default": "",
                        "description": "Name or label of this side",
                        "title": "Name",
                        "type": "string"
                    },
                    "authority": {
                        "$ref": "#/$defs/Authority",
                        "description": "The authority figure associated with this side"
                    },
                    "judgement_to_self": {
                        "default": "",
                        "description": "What this side judges in self",
                        "title": "Judgement To Self",
                        "type": "string"
                    },
                    "judgement_to_opposite": {
                        "default": "",
                        "description": "What this side judges in the opposite side",
                        "title": "Judgement To Opposite",
                        "type": "string"
                    },
                    "square": {
                        "$ref": "#/$defs/PodgornySquare",
                        "description": "Key psychological ratios of this side"
                    }
                },
                "title": "Side",
                "type": "object"
            },
            "Subpersonality": {
                "description": "Represents a coherent internal role composed of harmonized sides from various dualities.",
                "properties": {
                    "name": {
                        "default": "",
                        "description": "Name or label of the subpersonality",
                        "title": "Name",
                        "type": "string"
                    },
                    "sides": {
                        "description": "List of Side names that make up this subpersonality",
                        "items": {
                            "type": "string"
                        },
                        "title": "Sides",
                        "type": "array"
                    }
                },
                "title": "Subpersonality",
                "type": "object"
            },
            "Trauma": {
                "description": "Encapsulates the full structure and history of a trauma.",
                "properties": {
                    "description": {
                        "default": "",
                        "description": "Description of traumatic event",
                        "title": "Description",
                        "type": "string"
                    },
                    "setting": {
                        "default": "",
                        "description": "Context in which trauma occurred",
                        "title": "Setting",
                        "type": "string"
                    },
                    "actors": {
                        "description": "Who was involved",
                        "items": {
                            "type": "string"
                        },
                        "title": "Actors",
                        "type": "array"
                    },
                    "since_age": {
                        "default": 0,
                        "description": "Approximate age when it started",
                        "title": "Since Age",
                        "type": "integer"
                    },
                    "attributes": {
                        "$ref": "#/$defs/TraumaAttributes",
                        "description": "Triggers, psychosomatics, phrases"
                    },
                    "components": {
                        "$ref": "#/$defs/TraumaComponents",
                        "description": "Core trauma layers"
                    },
                    "coping": {
                        "$ref": "#/$defs/TraumaCoping",
                        "description": "Survival mechanisms"
                    }
                },
                "title": "Trauma",
                "type": "object"
            },
            "TraumaAttributes": {
                "description": "Describes symptomatic patterns and triggers linked to a trauma.",
                "properties": {
                    "triggers": {
                        "description": "What situations trigger the trauma",
                        "items": {
                            "type": "string"
                        },
                        "title": "Triggers",
                        "type": "array"
                    },
                    "psychosomatics": {
                        "description": "Somatic symptoms linked to trauma",
                        "items": {
                            "type": "string"
                        },
                        "title": "Psychosomatics",
                        "type": "array"
                    },
                    "key_phrases": {
                        "description": "Internalized traumatic phrases",
                        "items": {
                            "type": "string"
                        },
                        "title": "Key Phrases",
                        "type": "array"
                    }
                },
                "title": "TraumaAttributes",
                "type": "object"
            },
            "TraumaComponents": {
                "description": "Breakdown of the trauma into its physical, emotional, mental, and spiritual aspects.",
                "properties": {
                    "physical": {
                        "default": "",
                        "description": "Body sensations and physical effects",
                        "title": "Physical",
                        "type": "string"
                    },
                    "emotional": {
                        "default": "",
                        "description": "Emotional content of the trauma",
                        "title": "Emotional",
                        "type": "string"
                    },
                    "mental": {
                        "default": "",
                        "description": "Beliefs formed through trauma",
                        "title": "Mental",
                        "type": "string"
                    },
                    "spiritual": {
                        "default": "",
                        "description": "Existential or spiritual injury",
                        "title": "Spiritual",
                        "type": "string"
                    }
                },
                "title": "TraumaComponents",
                "type": "object"
            },
            "TraumaCoping": {
                "description": "Strategies and dependencies used to survive or adapt to the trauma.",
                "properties": {
                    "resource": {
                        "default": "",
                        "description": "Pleasant feeling obtained from coping actions",
                        "title": "Resource",
                        "type": "string"
                    },
                    "actions": {
                        "description": "Typical coping behaviors",
                        "items": {
                            "type": "string"
                        },
                        "title": "Actions",
                        "type": "array"
                    },
                    "authority": {
                        "$ref": "#/$defs/Authority",
                        "description": "Who first introduced this coping mechanism to the subject"
                    }
                },
                "title": "TraumaCoping",
                "type": "object"
            }
        },
        "properties": {
            "persona": {
                "$ref": "#/$defs/Persona"
            },
            "personality": {
                "$ref": "#/$defs/Personality"
            },
            "traumas": {
                "items": {
                    "$ref": "#/$defs/Trauma"
                },
                "title": "Traumas",
                "type": "array"
            },
            "dualities": {
                "items": {
                    "$ref": "#/$defs/Duality"
                },
                "title": "Dualities",
                "type": "array"
            }
        },
        "required": [
            "persona",
            "personality",
            "traumas",
            "dualities"
        ],
        "title": "Character",
        "type": "object"
    },
