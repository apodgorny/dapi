            "Authority": {
                "description": "Represents a person who served as an authority figure providing formative influence.",
                "properties": {
                    "name": {
                        "default": "",
                        "description": "Name of the authority figure",
                        "title": "Name",
                        "type": "string"
                    },
                    "sex": {
                        "default": "",
                        "description": "Sex of the authority figure",
                        "title": "Sex",
                        "type": "string"
                    },
                    "relation": {
                        "default": "",
                        "description": "Relation of the authority to the person",
                        "title": "Relation",
                        "type": "string"
                    },
                    "age_diff": {
                        "default": 0,
                        "description": "Age difference between authority and person",
                        "title": "Age Diff",
                        "type": "integer"
                    },
                    "since_age": {
                        "default": 0,
                        "description": "Since what age this authority was perceived as such",
                        "title": "Since Age",
                        "type": "integer"
                    },
                    "resource": {
                        "$ref": "#/$defs/Resource",
