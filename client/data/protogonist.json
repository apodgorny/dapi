                    "emotional": {
                        "default": "",
                        "description": "Emotional content of the trauma",
                        "title": "Emotional",
                        "type": "string"
                    },
                    "mental": {
                        "default": "",
                        "description": "Beliefs formed through trauma",
                        "title": "Mental",
                        "type": "string"
                    },
                    "spiritual": {
                        "default": "",
                        "description": "Existential or spiritual injury",
